style -name=unixhub forums.unixhub.net <<EOM

@font-face {
  font-family: 'Sigmar One';
  font-style: normal;
  font-weight: 400;
  src: local('Sigmar One'), local('SigmarOne'), url(http://themes.googleusercontent.com/static/fonts/sigmarone/v3/aRAZJs6CY7SV6eSg6Wx4jxsxEYwM7FgeyaSgU71cLG0.woff) format('woff');
}

/* Main Layout */

body {
		font-family: "Source Sans Pro" !important;
}

#uh-header {
		background: rgba(34,34,34,0.9) !important;
		position: fixed !important;
		height: 50px !important;
		padding: 0 !important;
		width: 20% !important;
		border-bottom: 1px solid rgb(29,29,29) !important;
}

#uh-navigation {
		position: fixed !important;
		left: 20% !important;
		background-color: rgba(34,34,34,0.9) !important;
		border: none !important;
		height: 50px !important;
		width: 80% !important;
		border-bottom: 1px solid rgb(29,29,29) !important;
}

#uh-navigation a {
		height: 50px !important;
		padding: 0 10px !important;
		line-height: 50px !important;
}

#container {
		margin-top: 55px !important;
}

table {
		border: none !important;
		margin-top: 20px !important;
}

.thead {
		background: transparent !important;
		border: none !important;
}
.thead strong a {
		font-weight: 100 !important;
		font-size: 30px !important;
}

.trow1 {
		background: rgb(50,50,50) !important;
}

.expcolimage { display: none !important; }

code {
		font-family: "Source Code Pro" !important;
		font-size: 12px !important;
}

/* Threads */

.name_topic {
		background: transparent !important;
		border: none !important;
		font-size: 30px !important;
		margin: 20px 0 !important;
		padding: 0 !important;
}

.mulrep {
		height: 22px !important;
}

.pagination {
		padding: 0 !important;
}

a[title="Post Reply"], a[title="Thread Closed"] {
		padding: 4px 6px !important;
		font-size: 11px !important;
		font-weight: bold !important;
}

.tbordsi {
		border-bottom: 2px dotted rgb(61,61,61) !important;
		margin: 20px auto !important;
}
.tbordsi td {
		background: transparent !important;
		border: none !important;
}
.thead-post {
		background: transparent !important;
		border: none !important;
}

hr {
		background-color: rgb(34,34,34) !important;
}

.largetext a[href*="uid=17"] {
		color: orange !important;
		text-shadow: 0 0 5px orange !important;
}

span[style="color: #bb3e3e;"] {
		text-shadow: 0 0 5px #bb3e3e !important;
}

EOM
